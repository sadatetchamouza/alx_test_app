<section>
  <div class="container">
    <h3 class="text-center mt-5">Generate an image based on your text</h3>
    <div class="row justify-content-center mt-5">
      <div class="col-lg-8">
        <%= form_with model: @prompt, url: images_generation_index_path, local: true do |f|  %>
          <div class="mb-3">
            <%= f.label :prompt, class: "form-label" %>
            <%= f.text_area :prompt, size: "70x5", class: "form-control", id: "prompt" %>
            <div id="emailHelp" class="form-text">A text description of the desired image(s). The maximum length is 1000 characters.</div>
          </div>
          <div class="mb-3">
            <%= f.label :number_images, "Number of images", class: "form-label" %>
            <%= f.text_field :number_images, class: "form-control", id: "image_number" %>
            <div id="emailHelp" class="form-text">The number of images to generate. Must be between 1 and 10.</div>
          </div>
          <%= f.label :size, class: "form-label" %>
          <%= f.select :size, ["256x256", "512x512", "1024x1024"], {}, class: "form-select", id: "image_size" %>
          <div class="mb-3 form-check">

          </div>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</section>